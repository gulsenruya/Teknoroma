<!-- ========================= SECTION  ========================= -->
<section class="section-name  padding-y-sm">
    <div class="container">

        <header class="section-heading">
            <a asp-action="AllProducts" asp-controller="Product" class="btn btn-outline-primary float-right">Tüm ürünler</a>
            <h3 class="section-title">Son Ürünler</h3>
        </header><!-- sect-heading -->


        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-3">
                    <div href="#" class="card card-product-grid">
                        <a href="/@product.ID" class="img-wrap"> <img src="~/images/products/@product.ImagePath"> </a>
                        <figcaption class="info-wrap">
                            <a href="/@product.ID" class="title">@product.ProductName</a>
                            <div class="price mt-1">
                                @product.Price TL
                                <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@product.ID" class="btn btn-sm btn-outline-primary float-right">Sepete Ekle <i class="fa fa-shopping-cart"></i></a>
                            </div>
                        </figcaption>
                    </div>
                </div>
            }
        </div> <!-- row.// -->

    </div><!-- container // -->
</section>
<!-- ========================= SECTION  END// ========================= -->
