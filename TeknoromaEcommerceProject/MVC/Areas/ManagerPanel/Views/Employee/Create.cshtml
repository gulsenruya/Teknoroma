@model Employee
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_ManagerLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Çalışan Ekle</h2>
                        </div>
                        <div class="col-sm-6">
                            <a asp-action="Index" asp-controller="Employee" class="btn btn-success float-md-right">Çalışan Listesi</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-controller="Employee" method="post">
                    <div class="form-group">
                        <label>Çalışan Adı</label>
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="çalışan Adı Giriniz" />
                    </div>
                    <div class="form-group">
                        <label>Çalışan Soyadı</label>
                        <input asp-for="LastName" type="text" class="form-control" placeholder="çalışan soyadını Giriniz" />
                    </div>
                    <div class="form-group">
                        <label>Ünvanı </label>
                        <input asp-for="Title" type="text" class="form-control" placeholder="Ünvan Ekleyiniz" />
                    </div>                    
                    <button type="submit" class="btn btn-success">Çalışan Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>


