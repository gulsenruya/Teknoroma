@model List<Supplier>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_ManagerLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Tedarikçi Listesi</h2>
                        </div>
                        <div class="col-sm-6">
                            <a asp-action="Create" asp-controller="Supplier" class="btn btn-success float-md-right">Tedarikçi Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover" id="supplier">
                    <thead>
                        <tr>
                            <th>Tedarikçi Adı</th>
                            <th>Açıklama</th>
                            <th>Oluşturma Tarihi</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="3">
                                    <div class="container text-center">
                                        <div class="alert alert-warning">
                                            <span>Herhangi bir tedarikçi oluşturulmamış ! Lütfen Tedrikçi Ekleyin</span>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                 <tr>
                                    <td>@item.CompanyName</td>
                                    <td>@item.Description</td>
                                    <td>@item.CreatedDate.Value.ToShortDateString()</td>
                                    <td>
                                        <a asp-action="Edit" asp-controller="Supplier" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Güncelle</a>
                                        <a asp-action="Delete" asp-controller="Supplier" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Sil</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $("#supplier").DataTable();
        })
    </script>

}

