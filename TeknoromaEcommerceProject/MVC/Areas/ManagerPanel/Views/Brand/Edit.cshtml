@model Brand
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_ManagerLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Marka Ekle</h2>
                        </div>
                        <div class="col-sm-6">
                            <a asp-action="Index" asp-controller="Brand" class="btn btn-success float-md-right">Marka Listesi</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="Brand" method="post">
                    <input type="hidden" asp-for="@Model.ID" />
                    <div class="form-group">
                        <label>Marka Adı</label>
                        <input asp-for="BrandName" type="text" class="form-control" placeholder="kategori adı" />
                    </div>
                    <div class="form-group">
                        <label>Marka Açıklama</label>
                        <input asp-for="Description" type="text" class="form-control" placeholder="açıklama" />
                    </div>                   
                    <button type="submit" class="btn btn-success">Marka Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

